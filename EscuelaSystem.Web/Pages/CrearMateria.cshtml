@page
@model EscuelaSystem.Web.Pages.CrearMateriaModel
@{
}
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Materia.id"></label>
        <input type="text" class="form-control" asp-for="Materia.Codigo" placeholder="Ingrese el codigo de materia">
        <span class="text" asp-validation-for="Materia.Codigo"></span>
    </div>
    <div class="form-group">
        <label asp-for="Materia.Descripcion"></label>
        <input type="text" class="form-control" asp-for="Materia.Descripcion" placeholder="Ingrese la descrpcion de la materia">
        <span class="text" asp-validation-for="Materia.Descripcion"></span>
    </div>
    <div class="form-group">
        <label asp-for="Materia.Habilitada"></label>
        <input type="checkbox" class="form-control" asp-for="Materia.Habilitada">
        <span class="text" asp-validation-for="Materia.Habilitada"></span>
    </div>
    <button type="submit" class="btn btn-dark">Enviar</button>
    <a asp-page="/Materias">REGRESAR ATRAS</a>
</form>