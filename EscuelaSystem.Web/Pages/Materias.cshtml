@page
@model EscuelaSystem.Web.Pages.MateriasModel
@{
}

<h1>Listado de Materias </h1>
<a asp-page="/CrearMateria">Crear Materia</a>
<br />
<br />
<table class="table table-dark table-striped ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Habilitada</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model.Materias)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.Codigo</td>
                <td>@item.Descripcion</td>
                <td>
                    @if (item.Habilitada)
                    {
                        <p>SI</p>
                    }
                    else
                    {
                        <p>NO</p>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditarMateria" asp-route-id="@item.id">Editar</a>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/EliminarMateria" asp-route-id="@item.id">Eliminar</a>
                </td>
            </tr>

        }

    </tbody>
</table>