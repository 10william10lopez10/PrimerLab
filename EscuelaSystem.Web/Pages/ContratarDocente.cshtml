@page
@model EscuelaSystem.Web.Pages.ContratarDocenteModel
@{
}
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Docente.id"></label>
        <input type="text" class="form-control" asp-for="Docente.Carnet" placeholder="Ingrese el carnet del docente">
        <span class="text" asp-validation-for="Docente.Carnet"></span>
    </div>
    <div class="form-group">
        <label asp-for="Docente.Nombre"></label>
        <input type="text" class="form-control" asp-for="Docente.Nombre" placeholder="Ingrese el nombre del docente">
        <span class="text" asp-validation-for="Docente.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Docente.Activo"></label>
        <input type="checkbox" class="form-control" asp-for="Docente.Activo">
        <span class="text" asp-validation-for="Docente.Activo"></span>
    </div>
    <button type="submit" class="btn btn-dark">Enviar</button>
    <a asp-page="/Docentes">REGRESAR ATRAS</a>
</form>